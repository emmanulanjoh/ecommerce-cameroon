# Production Environment Configuration
NODE_ENV=production
PORT=5000
NODE_OPTIONS=--no-deprecation

# Database Configuration
MONGODB_URI=your_production_mongodb_uri
DB_NAME=ecommerce_cameroon

# Security Keys (Generate new ones for production)
JWT_SECRET=your_production_jwt_secret_here
SESSION_SECRET=your_production_session_secret_here

# Admin Credentials
ADMIN_EMAIL=your_admin_email@domain.com
ADMIN_PASSWORD=your_secure_admin_password

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASS=your_production_app_password
EMAIL_FROM=noreply@yourdomain.com

# WhatsApp Configuration
TWILIO_ACCOUNT_SID=your_production_twilio_sid
TWILIO_AUTH_TOKEN=your_production_twilio_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890
BUSINESS_WHATSAPP_NUMBER=+237678830036
WHATSAPP_VERIFY_TOKEN=your_production_whatsapp_token

# Application URLs
APP_URL=https://yourdomain.com
WHATSAPP_WEBHOOK_URL=https://yourdomain.com/webhook/whatsapp

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads

# Business Information
BUSINESS_NAME=Your Business Name
BUSINESS_ADDRESS=Your Business Address
BUSINESS_PHONE=+237678830036
BUSINESS_EMAIL=contact@yourdomain.com

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_production_aws_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret
S3_BUCKET_NAME=your-production-bucket
CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# Google OAuth
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback